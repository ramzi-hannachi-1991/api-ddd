{
  "name": "api-ddd",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:ramzi-hannachi-1991/api-ddd.git",
  "author": "Ramzi <ramzi.hannachi1991@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "sucrase-node ./src/main/server.ts",
    "lint": "ts-standard",
    "lint:fix": "ts-standard --fix",
    "test": "jest --silent --noStackTrace --runInBand",
    "test:unit": "yarn test -c jest-unit.config.ts",
    "test:integration": "yarn test -c jest-integration.config.ts",
    "test:verbose": "jest --runInBand --verbose",
    "test:watch": "yarn test --watch",
    "test:ci": "yarn test --coverage",
    "dependencies:build": "depcruise --config .dependency-cruiser.js --output-type dot src | dot -T png > assets/dependencies.png"
  },
  "ts-standard": {
    "project": "./tsconfig.json",
    "ignore": [
      "dist",
      "src/**/*.js"
    ],
    "globals": [
      "describe",
      "test"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.18.1",
    "mongodb": "^4.6.0",
    "mongoose": "^6.3.4",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/mongodb": "^4.0.7",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^17.0.35",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.2",
    "dependency-cruiser": "^11.7.1",
    "git-commit-msg-linter": "^4.1.2",
    "husky": "4",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.1",
    "mongodb-memory-server": "^8.6.0",
    "sucrase": "^3.21.0",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "ts-standard": "*",
    "typescript": "^4.6.4"
  }
}
